<div class="users-page reset-password-page row">
  <h3 class='page-title'>重置密码</h3>

  <div class="form-container col-md-6 col-md-offset-3">
    <%= form_for @user, url: user_password_path, method: :patch do |f| %>
      <%= hidden_field_tag :reset_password_token, params[:reset_password_token] %>

      <div class="input-group">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-lock"></span>
        </span>

        <%= f.password_field :password, class: 'form-control', placeholder: '请输入您的新密码', required: true %>
      </div>

      <div class="input-group submit-btn-container">
        <%= f.submit "确认新密码", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
